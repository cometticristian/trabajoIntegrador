<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
<body>
    <%- include('../partials/headerNav') %>
    
    <!-- Productos aleatorios -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <%if(category.length>0){%>
                    <%for(let i=0; i<category.length; i++){%>
                        <h2 class="products-title"><%=category[i].category.toUpperCase();%> / <%=category[i].subCategory%></h2>
                    <%break}%>
                <%}else{%>
                    <h2 class="products-title">En estemomento no hay productos de esta categor√≠a</h2>
                <%}%>    
            </div>

            <% for(let i=0; i<category.length; i++){ %>
            <div class="col-6 col-sm-4 col-lg-3">
                <section class="product-box">
                    <a href="/products/detail/<%=category[i].id%>">
                        <figure class="product-box_image">
                            <img src="/images/products/<%=category[i].image%>" alt="imagen de <%=category[i].name%>">
                        </figure>
                        <article class="product-box_data">
                            <h2>$<%=category[i].price%></h2>
                            <span><%=category[i].discount%>% OFF</span>
                            <p><%=category[i].description%></p>
                        </article>
                        <a href="/products"><i class="fas fa-cart-plus"></i></a>
                    </a>
                </section>
            </div>
            <%}%>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
</body>
</html>