<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<head>
    <link rel="stylesheet" href="/stylesheets/products-detail.css">
</head>

<body>
    <%- include("../partials/headerNav") %>
    <section>
        <div class="container">
            <div>
                <ul class="list">
                    <li>
                        <a href="/products/category/<%=product.category%>">
                            <h2 class="product-title"><%=product.Category.name.toUpperCase()%> |</h2>
                        </a>
                    </li>
                    <li>
                        <a href="/products/subCategory/<%=product.subCategory%>">
                            <h2 class="product-title">| <%=product.Subcategory.name.toUpperCase();%> |</h2>
                        </a>
                    </li>
                    <li>
                        <h2 class="product-title">| <%=product.name.toUpperCase();%></h2>
                    </li>
                </ul>
            </div>
            <div class="row detail">

                <div class=" col-12 col-md-8">
                    <div class="row">
                        <div class="col-md-3 small-img-box">
                            <div class="img-small">
                                <img class="img-s" src="/images/products/<%=product.Image[0].name%>" alt="">
                            </div>
                            <div class="img-small">
                                <img class="img-s" src="/images/products/<%=product.Image[0].name%>" alt="">
                            </div>
                            <div class="img-small">
                                <img class="img-s" src="/images/products/<%=product.Image[0].name%>" alt="">
                            </div>
                        </div>
                        <div class=" col-12 col-md-9 img-box">
                            <img id="img1" src="/images/products/<%=product.Image[0].name%>" alt="">
                            <%- include("../partials/slide-button") %>
                        </div>
                    </div>
                </div>
                <div class="description-box container col-12 col-md-4">
                    <div>
                        <h2 class="description"><%=product.name%></h2>
                        <h2 class="description">Precio $<%=product.price%></h2>
                        <h3 class="h3-detail description">DESCRIPCION</h3>
                        <p class="p-detail description"><%=product.description%></p>
                        <div class="design-box">
                            <div id="design1">Elegir Diseño</div>
                            <div id="design2">⯆</div>
                        </div>
                        <div class="crud">
                            <form action="/products/delete/<%=product.id%>?_method=DELETE" method="POST">
                                <button id="delete" class="send" type="submit">ELIMINAR</button>
                            </form>
                            <a id="edit" class="send" href='/products/edit/<%=product.id%>' target="_blank"><div>EDITAR</div></a>
                        </div>
                    </div>
                    <div class="add-box">
                        <div id="add1" class="add">
                            <a href="/cart/add/<%=product.id%>">Agregar al carrito</a>
                        </div>
                        <div id="add2" class="add">1</div>
                    </div>
                </div>
            </div>
            <div id="down" class="row">
                <div id="down1" class="col-12">
                    <div>
                        PRODUCTOS RELACIONADOS
                    </div>
                </div>
                <div id="down2" class="col-12">
                    <% category.forEach(function(category){ %>
                        <% if (category.category_id == product.category_id && category.id != product.id){%>
                    <div class="col-6 col-sm-3 col-lg-3">
                        <section class="product-box">
                            <a href="/products/detail/<%=category.id%>">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%=category.Image[0].name%>" alt="imagen de <%=category.name%>"">
                                    </figure>
                                    <article class=" product-box_data">
                                    <h2>$<%=category.price%>"</h2>
                                    <span><%=category.discount%>"% OFF</span>
                                    <p><%=category.description%>"</p>
                                    </article>
                                    <a href="/cart"><i class="fas fa-cart-plus"></i></a>
                            </a>
                        </section>
                    </div>
                    <%}%>
                    <%})%>
                </div>
            </div>
        </div>
    </section>
    <%- include('../partials/footer') %>
</body>

</html>