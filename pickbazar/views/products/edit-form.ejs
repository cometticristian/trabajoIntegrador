<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <head>
        <link rel="stylesheet" href="/stylesheets/products-create.css">
    </head>

<body>
    <div class="container-fluid">
        <header class="row">
            <div class="head col-12">
                <i class="menu fas fa-bars"></i>
                <h1 class="title">EDITAR PRODUCTO</h1>
            </div>
        </header>
    </div>
    <section class="container">
        <div class="left">
            <div class="sec2">
                <form action="/products/edit/<%=product.id%>?_method=PUT" enctype="multipart/form-data" method="POST">
                    <div class="form">
                        <select name="pickCategory" id="category" class="select">
                            <option value="<%=product.category%>"><%=product.category.toUpperCase()%></option>
                            <option value="COCINA">COCINA</option>
                            <option value="BAÑO">BAÑO</option>
                            <option value="DECORACION">DECORACION</option>
                            <option value="LIMPIEZA">LIMPIEZA</option>
                        </select>
                        <select name="pickSubCategory" id="sub-category" class="select">
                            <option value="<%=product.subCategory%>"><%=product.subCategory.toUpperCase();%></option>
                            <option value="0">SELECCIONE SUB CATEGORIA</option>
                            <option value="CACEROLA">CACEROLA</option>
                            <option value="PAVA">PAVA</option>
                            <option value="JARRO">JARRO</option>
                            <option value="FRASCO">FRASCO</option>
                            <option value="SARTEN">SARTEN</option>
                            <option value="ACCESORIO">ACCESORIO</option>
                            <option value="CESTO">CESTO</option>
                            <option value="CANASTO">CANASTO</option>
                            <option value="ALFOMBRA">ALFOMBRA</option>
                            <option value="LIMA">LIMA</option>
                            <option value="ESPONJA">ESPONJA</option>
                            <option value="RELOJ">RELOJ</option>
                            <option value="ESPEJO">ESPEJO</option>
                            <option value="CUADRO">CUADRO</option>
                            <option value="VELA">VELA</option>
                            <option value="FAROL">FAROL</option>
                            <option value="MOPA">MOPA</option>
                        </select>
                    </div>
            </div>
            <div class="sec4">

                <div class="form2">
                    <label class="label-block" for="name">NOMBRE DEL PRODUCTO</label>
                    <input class="input-block" type="text" name="name" value="<%=product.name%>">
                    <label class="label-block" for="brand">MARCA</label>
                    <input class="input-block" type="text" name="brand" value="<%=product.brand%>">
                    <label class="label-block" for="description">DESCRIPCION</label>
                    <textarea name="description" id="desc" cols="30" rows="10"><%=product.description%></textarea>
                </div>
                <div class="form-price">
                    <p class="font-price">
                        <label for="price">PRECIO DE COSTO</label>
                        <input class="input-price" type="number" name="price" value="<%=product.price%>">
                    </p>
                    <p class="font-price">
                        <label for="model">IVA</label>
                        <select name="tax" id="" class="iva">
                            <option value="<%=product.tax%>"><%=product.tax%></option>
                            <option value="10.5">21</option>
                            <option value="21">10,5</option>
                        </select>
                    </p>
                    <p class="font-price">
                        <label for="desc">DESCUENTO</label>
                        <input class="input-price" type="number" name="discount" value="<%=product.discount%>">
                    </p>
                    <p class="submit">
                        <input class="send" type="submit" value="GUARDAR CAMBIOS">
                    </p>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="sec3">
                <div class="photo main-photo">
                    <input type="file" name="mainPick" class="inputFile">
                    <i class="fas fa-camera"></i>
                </div>
                <div class="photo photo-sec">
                    <input type="file" name="secondPick" class="inputFile">
                    <i class="fas fa-camera camera-sec"></i>
                </div>
                <div class="photo photo-sec">
                    <input type="file" name="thirdPick" class="inputFile">
                    <i class="fas fa-camera camera-sec"></i>
                </div>
                <div class="photo photo-sec">
                    <input type="file" name="fourthPick" class="inputFile">
                    <i class="fas fa-camera camera-sec"></i>
                </div>
            </div>
            </div>
        </div>


    </section>
    </form>
</body>

</html>