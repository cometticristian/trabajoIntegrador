<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<head>
   <style>
      .columna{
         margin-bottom: 20px ;
      }
      .formulario{
         display: flex;
         flex-direction: column;
         align-content: center;
      }
      
      .log-reg{
         display: flex;
         flex-wrap: wrap;
         flex-direction: column;
      }
      .align{
         flex-wrap: wrap;
         display: flex;
         justify-content: center;
      }
      .orange {
         background-color: #f58220;
      }
      
      .black {
         background-color: black;         
      }
      
      .btn-login {
         font-weight: bold;
         font-size: 16px;
         width: 80%;
         color: #FFFFFF;
         margin: 6px;
         height: 2em;
         border: solid 1px black;
         border-radius: 5px;
      }
      
      .login-box {
         /* background-color:#EDEFEF;*/
         margin: 5px;
         padding: 5px;
         width: 100%;
         align-items: center;
      }
      
      hr {
         margin-top: 10px;
         margin-bottom: 10px;
      }
      
      label {
         font-weight: 400;
         margin-top: 6px;
         height: 25px;
      }
      
      input {
         width: 100%;
         height: 25px;
         
         margin-bottom: 6px;
      }
      
      .input-login {
         width: 200px;
         height: 25px;
         margin-bottom: 6px;
      }
   </style>
   
</head>

<body>
   <%- include('../partials/headerNav') %>
   
   
   
   <div class="container">
      <div class="row">
         <div class="col-12 col-md-6 columna">
            <div class="formulario">
               <h1>INGRESÁ A TU CUENTA</h1>
               <!--<HR style="height:1px;border-width:0;color:gray;background-color:gray"></HR>-->
               
               <section class="log-reg">
                  <form action="/users/profile" method="POST">
                     <label for="email"><h3>Email:</h3></label>
                     <input class="" type="email" required id="email" name="email" value="">
                     <label for="password"><h3>Contraseña:</h3></label>
                     <input class="" type="password" required id="password" name="password">
                     <div><a href="/forgotPass">
                        <h3>¿Olvidaste tu contraseña?</h3>
                     </a></div>
                     <div class="align"><input class="btn-login black" type="submit" value="INGRESAR"></div>
                  </form>
                  <form class="align"> <input type="submit" class="btn-login orange" value="INGRESAR CON FACEBOOK"></form>
                  <form class="align"> <input type="submit" class="btn-login orange" value="INGRESAR CON GOOGLE+"></form>
               </section>
            </div>
         </div>
         
         <div class="col-12 col-md-6 columna">
            <div class="formulario">
               <h1>CREAR NUEVA CUENTA</h1>
               <!--<HR style="height:1px;border-width:0;color:gray;background-color:gray"></HR>-->
               
               <section class="log-reg">
                  <form action="/users/create" method="POST">
                     <label for="nombre">
                        <h3>Nombre:</h3>
                     </label>
                     <input type="nombre" required id="nombre" name="nombre" value="">
                     <label for="apellido">
                        <h3>Apellido:</h3>
                     </label>
                     <input type="apellido" required id="apellido" name="apellido" value="">
                     <label for="email">
                        <h3>Email:</h3>
                     </label>
                     <input type="email" required id="email" name="email" value="">
                     <label for="tel">
                        <h3>Telefono:</h3>
                     </label>
                     <input type="tel" required id="tel" name="tel" value="">
                     <label for="password">
                        <h3>Contraseña:</h3>
                     </label>
                     <input type="password" required id="password" name="password">
                     <div class="align"><input class="btn-login black" type="submit" value="CREAR CUENTA"></div>
                  </form>
                  
               </section>
            </div>
         </div>
      </div>
   </div>
   
   
   
   
   
   <%- include('../partials/footer') %>
</body>

</html>