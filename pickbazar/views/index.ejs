  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Selección de productos</h2>
      </div>

      <% for(let i=0; i<products.length; i++){ %>
				<%if (products[i].important=="home"){ %>
      <div class="col-6 col-sm-4 col-lg-3">
        <section class="product-box">
          <a href="/products/detail/<%=products[i].id%>">
            <figure class="product-box_image">
              <img src="/images/products/<%=products[i].image%>" alt="imagen de <%=products[i].name%>"">
            </figure>
            <article class="product-box_data">
              <h2>$<%=products[i].price%>"</h2>
              <span><%=products[i].discount%>"% OFF</span>
              <p><%=products[i].description%>"</p>
            </article>
            <a href="/cart"><i class="fas fa-cart-plus"></i></a>
          </a>
        </section>
      </div>
      <%}%>
			<%}%>

