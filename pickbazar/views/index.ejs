<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
   <!--<p><a href='/products'>Todos los productos</a></p>
      <p><a href='/products/detail/1'>Producto 1</a></p>
      <p><a href='/products/create'>Formulario Crear</a></p>
   -->
   <%- include('./partials/headerNav') %>

   <div class="banner"></div>
   
   <!-- Productos aleatorios -->
   <div class="container products-wrapper">
      <div class="row">
         <div class="col-12">
            <h2 class="products-title">Selección de productos</h2>
         </div>
         
         <% selected.forEach (function(select){ %>
            <%if(select.state!=0){%>
            <div class="col-6 col-sm-4 col-lg-3">
               <section class="product-box">
                  <a href="/products/detail/<%=select.id%>">
                     <figure class="product-box_image">
                        <img src="/images/products/<%=select.Image[0].name%>" alt="imagen de <%=select.name%>"">
                     </figure>
                     <article class=" product-box_data">
                        <h2>$<%=select.price%></h2>
                        <span><%=select.discount%>% OFF</span>
                        <p><%=select.description%></p>
                     </article>
                     <a href="/cart/add/<%=select.id%>?item=1"><i class="fas fa-cart-plus"></i></a>
                  </a>
               </section>
            </div>
            <%}%>
         <%})%>
            
            <!-- /Productos aleatorios -->
            <!-- /Nuevos Productos -->
            <div class="col-12">
               <h2 class="products-title">Últimos lanzamientos</h2>
            </div>
            
            <% news.forEach (function(nuevo){ %>
               <%if(nuevo.state!=0){%>
               <div class="col-6 col-sm-4 col-lg-3">
                  <section class="product-box">
                     <a href="/products/detail/<%=nuevo.id%>">
                        <figure class="product-box_image">
                           <img src="/images/products/<%=nuevo.Image[0].name%>" alt="imagen de <%=nuevo.name%>"">
                        </figure>
                        <article class=" product-box_data">
                           <h2>$<%=nuevo.price%></h2>
                           <span><%=nuevo.discount%>% OFF</span>
                           <p><%=nuevo.description%></p>
                        </article>
                        <a href="/cart/add/<%=nuevo.id%>?item=1"><i class="fas fa-cart-plus"></i></a>
                     </a>
                  </section>
               </div>
               <%}%>
            <%})%>
            </div>
         </div>
         <!-- /Nuevos Productos -->
         <%- include('./partials/footer') %>
         <!-- /Newsletter -->
      </body>
      
      </html>