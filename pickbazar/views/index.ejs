          <a href="/products/detail/<%=products[i].id%>">
            <figure class="product-box_image">
              <img src="/images/products/<%=products[i].image%>" alt="imagen de <%=products[i].name%>"">
            </figure>
            <article class="product-box_data">
              <h2>$<%=products[i].price%>"</h2>
